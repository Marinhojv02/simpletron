#include <stdio.h>

#define TAM 5
// Definição dos comandos
// ----------------------------------------------------------------------------
#define READ 10
#define WRITE 11
// ----------------------------------------------------------------------------
#define LOAD 20
#define STORE 21
// ----------------------------------------------------------------------------
#define ADD 30
#define SUBTRACT 31
#define DIVIDE 32
#define MULTIPLY 33
// ----------------------------------------------------------------------------
#define BRANCH 40
#define BRANCHNEG 41
#define BRANCHZERO 42
#define HALT 43
// ----------------------------------------------------------------------------
int verificar_comando(char str, int num);
int main(){
    char sinal[TAM];
    int acumulador;
    int comandos[TAM];
    int i;
    int verifica;

    for(i=0; i<5;i++){
        fflush(stdin);
        scanf("%c%5d\n", &sinal[i], &comandos[i]);
        printf("imprimir o comando: %c%d\n", sinal[i], comandos[i]);
        printf("i: %d\n", i);
        verifica = verificar_comando(sinal[i], comandos[i]);
        if(verifica==1){
            printf("acabaram os comandos\n");
            break;
        }
        else if(verifica == 0){
            printf("entra aqui\n");
        }
        else{
            printf("não entra\n");
        }
        
    }
    /*do{
        fflush(stdin);
        scanf("%c%d", &sinal[i], &comandos[i]);
        i++;
        
    } while (comandos[i] != '-99999' || i < 100);
    */
    for (acumulador = 0; acumulador < i; acumulador++){
        printf("%02d \? %c%d\n", acumulador, sinal[acumulador], comandos[acumulador]);
    }
    return 0;
}
int verificar_comando(char str, int num){
    
    if (str == '+'){
        return 0;
    }else if (str == '-'){
        if ( num == 99999){
            return 1;
        }else{
            return 2;
        }
    }else{
        return 2;
    }
}
